{
  "name": "App",
  "description": "Application description",
  "author": "John Doe <john.doe@gmail.com>",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/bin/app.js",
  "build": {
    "files": [
      "dist/assets/",
      "dist/bin/",
      "node_modules/",
      "package.json"
    ]
  },
  "scripts": {
    "package": "npm run build:prod && build && npm run clean",
    "clean": "trash dist/assets dist/bin",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:update": "npm run test -- -u",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:dev",
    "server:dev": "cross-env HOT_MODULES=true TS_NODE_PROJECT=tsconfig.base.json ELECTRON_DISABLE_SECURITY_WARNINGS=true electron --inspect --remote-debugging-port=9222 -r ts-node/register/type-check src/bin/app.ts",
    "server:prod": "cross-env NODE_ENV=production TS_NODE_PROJECT=tsconfig.base.json ELECTRON_DISABLE_SECURITY_WARNINGS=true electron -r ts-node/register/transpile-only src/bin/app.ts",
    "build:dev": "npm run clean && cross-env TS_NODE_PROJECT=tsconfig.base.json webpack",
    "build:prod": "cross-env NODE_ENV=production npm run build:dev"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.6.3",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "@types/webpack": "^4.4.19",
    "@types/webpack-dev-server": "^3.1.1",
    "@types/webpack-env": "^1.13.6",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "electron": "^3.0.10",
    "electron-builder": "^20.36.2",
    "esm": "^3.0.84",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.1.0",
    "normalize.css": "^8.0.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "typescript-tslint-plugin": "^0.1.0",
    "wcb": "^0.13.4",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
