{
  "name": "Application",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "^6.0.0",
    "npm": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "scriptPreprocessor": "<rootDir>/preprocessor.js",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$"
  },
  "scripts": {
    "start": "npm run build:prod",
    "clean": "[ -d dist ] && trash dist || true",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tslint --type-check --project tsconfig.json 'src/**/*.ts{,x}'",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:hot",
    "server:hot": "cross-env NODE_ENV=development HOT_MODULES=true node hot-server",
    "build": "npm run clean && cross-env HOT_MODULES=false webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build",
    "build:prod": "cross-env NODE_ENV=production npm run build"
  },
  "dependencies": {
    "@types/jest": "^16.0.1",
    "@types/node": "^6.0.41",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.16.0",
    "copy-webpack-plugin": "^4.0.0",
    "cross-env": "^3.1.1",
    "css-loader": "^0.26.1",
    "file-loader": "^0.9.0",
    "globule": "^1.0.0",
    "json-loader": "^0.5.4",
    "normalize.css": "^5.0.0",
    "style-loader": "^0.13.1",
    "trash-cli": "^1.3.0",
    "typescript": "^2.0.3",
    "webpack": "^2.1.0-beta.25"
  },
  "devDependencies": {
    "eslint-config-jupl": "^0.5.3",
    "eventsource-polyfill": "^0.9.6",
    "fbjs-scripts": "^0.7.1",
    "hapi": "^16.0.1",
    "hapi-webpack-plugin": "^1.3.0",
    "jest": "^18.0.0",
    "tslint": "^4.1.0",
    "tslint-react": "^2.1.1"
  }
}
