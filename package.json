{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist/bin",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest",
    "test:update": "npm run test -- -u",
    "test:watch": "npm run test -- --watch",
    "build:base": "npm run clean && cross-env TS_NODE_PROJECT=tsconfig.base.json webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build:base",
    "build:prod": "cross-env NODE_ENV=production npm run build:base",
    "server": "npm run server:dev",
    "server:dev": "cross-env NODE_ENV=development ESM_DISABLE_CACHE=true nodemon src/bin/app.ts",
    "server:prod": "cross-env NODE_ENV=production ESM_DISABLE_CACHE=true node -r esm -r dotenv/config -r tsconfig-paths/register -r ts-node/register/transpile-only src/bin/app"
  },
  "bundledDependencies": [
    "dotenv",
    "good",
    "good-console",
    "good-squeeze",
    "hapi",
    "rotating-file-stream"
  ],
  "dependencies": {
    "dotenv": "^7.0.0",
    "good": "^8.1.1",
    "good-console": "^8.0.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^18.1.0",
    "rotating-file-stream": "^1.3.9"
  },
  "devDependencies": {
    "@jupl/ts": "0.0.5",
    "@types/hapi": "^18.0.1",
    "@types/jest": "^23.3.14",
    "@types/node": "^11.13.5",
    "@types/webpack": "^4.4.21",
    "cross-env": "^5.2.0",
    "esm": "^3.0.84",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "trash-cli": "^2.0.0",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "wcb": "^0.15.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  }
}
