{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist/bin",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:update": "npm run test -- -u",
    "test:watch": "npm run test -- --watch",
    "build:base": "npm run clean && cross-env TS_NODE_PROJECT=tsconfig.base.json webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build:base",
    "build:prod": "cross-env NODE_ENV=production npm run build:base",
    "server": "npm run server:dev",
    "server:dev": "cross-env NODE_ENV=development nodemon src/bin/app.ts",
    "server:prod": "cross-env NODE_ENV=production node -r esm -r ts-node/register/transpile-only src/bin/app"
  },
  "dependencies": {
    "dotenv": "^6.1.0",
    "hapi": "^17.8.1"
  },
  "devDependencies": {
    "@jupl/tslint-config": "^0.6.4",
    "@types/hapi": "^17.6.4",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.10",
    "@types/webpack": "^4.4.18",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "cross-env": "^5.2.0",
    "esm": "^3.0.84",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "typescript-tslint-plugin": "^0.1.1",
    "wcb": "^0.13.3",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  }
}
