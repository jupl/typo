{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "bin": "dist/bin/app.js",
  "scripts": {
    "package": "npm run build:prod && npm pack && npm run clean",
    "clean": "trash dist/assets dist/bin",
    "coverage": "npm run test -- --coverage",
    "coverage:watch": "npm run coverage -- --watch",
    "lint": "tsc && npm run lint:file",
    "lint:file": "tslint --project tsconfig.json",
    "test": "jest --config .jestrc.json",
    "test:update": "npm run test -- -u",
    "test:watch": "npm run test -- --watch",
    "server": "npm run server:dev",
    "server:dev": "cross-env NODE_ENV=development ESM_DISABLE_CACHE=true HOT_MODULES=true node --inspect -r esm -r ts-node/register/type-check src/bin/app.ts",
    "server:prod": "cross-env NODE_ENV=production ESM_DISABLE_CACHE=true node -r esm -r ts-node/register/transpile-only src/bin/app",
    "build:base": "npm run clean && cross-env TS_NODE_PROJECT=tsconfig.base.json webpack",
    "build:dev": "cross-env NODE_ENV=development npm run build:base",
    "build:prod": "cross-env NODE_ENV=production npm run build:base"
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "hapi": "^17.8.1",
    "inert": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@jupl/tslint-config": "^0.6.5",
    "@types/hapi": "^17.8.0",
    "@types/inert": "^5.1.2",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/webpack": "^4.4.20",
    "@types/webpack-env": "^1.13.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.0.0",
    "esm": "^3.0.84",
    "file-loader": "^2.0.0",
    "hapi-webpack-plugin": "^3.0.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.1.0",
    "node-dev": "^3.1.3",
    "normalize.css": "^8.0.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "typescript-tslint-plugin": "^0.1.2",
    "wcb": "^0.15.0",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  }
}
